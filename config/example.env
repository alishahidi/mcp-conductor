# Spring Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# SSH Configuration
SSH_DEFAULT_HOST=your-server-ip
SSH_DEFAULT_PORT=22
SSH_DEFAULT_USERNAME=your-username
SSH_PRIVATE_KEY_PATH=/path/to/your/ssh/key
SSH_PRIVATE_KEY_PASSPHRASE=

# Optional: Password authentication
# SSH_DEFAULT_PASSWORD=your-password

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_API_VERSION=
DOCKER_TLS_VERIFY=false
DOCKER_CERT_PATH=
DOCKER_REGISTRY_URL=
DOCKER_REGISTRY_USERNAME=
DOCKER_REGISTRY_PASSWORD=

# Security
SECURITY_USER=admin
SECURITY_PASSWORD=change-this-password
SECURITY_ENABLED=true
COMMAND_STRICT_MODE=true

# Server Configurations
PROD_SERVER_HOST=production.example.com
PROD_SERVER_PORT=22
PROD_SERVER_USERNAME=deploy
PROD_SERVER_PASSWORD=
PROD_SUDO_PASSWORD=

STAGING_SERVER_HOST=staging.example.com
STAGING_SERVER_PORT=22
STAGING_SERVER_USERNAME=deploy
STAGING_SERVER_PASSWORD=

# Rate Limiting
RATE_LIMIT_CAPACITY=100
RATE_LIMIT_REFILL_TOKENS=100
RATE_LIMIT_REFILL_DURATION_MINUTES=1

# Monitoring
GRAFANA_PASSWORD=admin

# Audit
AUDIT_ENABLED=true
AUDIT_LOG_FILE=logs/audit.log